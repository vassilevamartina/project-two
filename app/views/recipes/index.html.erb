
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4"><h1>Recipe Search</h1></div>
    <div class="col-md-4"></div>
  </div>
  <div class="row">
    <div class="col-md-4"></div>

    <div class="col-md-4">


      <%= form_tag recipes_path, :method => 'get' do %>
      <%= text_field_tag :query, params[:query] %>
      <%= submit_tag "Grubify", :name => nil %>
      <% end %>
      <br>

      <% if @recipe_get %>	
      <% @recipe_get.each do |r| %>
        
        <ul>
          <li class="recipes"><strong> <%= r['attribution']['text'] %> <strong>
   	      <%= link_to image_tag(r['images'][0]['hostedLargeUrl']), r['source']['sourceRecipeUrl'], :class => "image_style" %> </li><br><br>
        </ul>
  </div>
  <div class="col-md-4"></div>
  </div>
  
	 

<% end %>
<% end %> 



