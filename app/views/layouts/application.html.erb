<!DOCTYPE html>
<html>
<head>
  <title>Grubify</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  	<!-- adds jquery for twitter bootstrap -->
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

  <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>
<body style="background-color: #d3d3d3;">
<div class="container">


 <ul class="nav nav-pills" role="tablist">
 
    <li role="presentation" class="active"><%=link_to "Grubify",root_path %> </li>
    <li role="presentation"><%=link_to "Sign Up", new_user_path %> </li> 
    <li role="presentation"><%=link_to "Log In", new_sessions_path %> </li>
    <li role="presentation"><%=link_to "Log Out", sessions_path, method: :delete %> </li> 
 </ul>


<% if current_user %>
	You're logged in as <%= current_user.email %>

<%else%>
	<% button_to "Login", new_sessions_path, method: :get %>
  <% button_to "Sign Up", new_user_path, method: :get %>

<%end%> 

<div class="span9"><%= yield %></div>
</div>

</body>
</html>


